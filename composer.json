{
    "name": "istepaniuk/cal2bird",
    "description": "iCalendar to MoneyBird timesheet connector",
    "type": "project",
    "license": "GPL-v3",
    "authors": [
        {
            "name": "Ivan Stepaniuk",
            "email": "me@istepaniuk.com"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "^7.1",
        "kigkonsult/icalcreator": "^2.29",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3",
        "phpspec/prophecy-phpunit": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "autoload": {
        "psr-4": {
            "CalBird\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CalBird\\Tests\\": "tests"
        }
    },
    "scripts": {
        "fix": "php-cs-fixer fix",
        "test": "phpunit --colors=always tests/",
        "testdox": "phpunit --testdox --colors=always tests/"
    }
}
